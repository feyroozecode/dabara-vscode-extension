{
  "comments": {
    "lineComment": "#",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*fara\\b",
      "end": "^\\s*ƙare\\b"
    }
  },
  "wordPattern": "[\\w\\u0180-\\u024F]+",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(fara|idan|sauran|dabadara|maimaita|aiki)\\b.*$",
    "decreaseIndentPattern": "^\\s*ƙare\\b.*$"
  }
}